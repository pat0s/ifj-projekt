-- vypocet faktorialu
require "ifj21"

function main() -- funkcia bez parametrov
 local a:integer
 local  vysl:  integer = 0
 write("Zadajte cislo pre vypocet faktorialu\n")
 a = readi()
 if a == nil then
         write("a je nil \n") return
 else
 end
 if a < 0 then
  write("Faktorial nelze spocitat\n")
  else
   vysl = 1
   while a > 0 do 
    vysl = vysl * a a = a -1 -- dva vyrazy na riadku
   end
   write("Vysledok je: ", vysl, "\n")
 end
end

main() -- prikaz hlavneho tela
